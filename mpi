double factorial(int k){
	double aux=1;
MPI_Init(&I, &K);
MPI_Comm_K(MPI_COMM_WORLD, &K);
Ingresamos un for la cual dice que i va a ser = a 2 y k tiene que ser menor o igual a i la cual va a aumentar consecutivamente
	for(int i = 2; i<=k ; i++){
		aux *= i;
	}
Retorna i
	return aux;
}
double e(int k){
	double sum = 0;
Para i=0 y i menor k i va aumentar 
	for(int i = 0; i < k; i++){
		sum += 1/factorial(i);
	}
Retorna sum 
	return sum;
}
